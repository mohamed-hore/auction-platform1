<script>
    var inputField = document.getElementById("myField");
    var submitButton = document.getElementById("myButton");

    inputField.addEventListener("input", function () {
        if (inputField.value !== "") {
            submitButton.disabled = false;
        } else {
            submitButton.disabled = true;
        }
    });
</script>

