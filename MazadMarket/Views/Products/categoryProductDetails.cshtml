                    @Html.Raw(layout.remarks)
                </th>
            </tr>

            @foreach (var item in Model.ProductsAuction)
            {
                <tr style="background-color: @((item == Model.ProductsAuction.Last()) ? "rgba(0, 128, 0, 0.5);" : "rgba(128, 128, 128, 0.2)");">
                    <td>
                        @Html.DisplayFor(modelItem => item.userId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.riseAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dateOfRise)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remarks)
                    </td>
                </tr>
            }

            <tr>
                @if (Model.sold)
                {
                <td colspan="4" style="text-align: center;">
                    <img src="~/images/winner.gif" style="width:500px; height:90px;" class="pic-pic" />
                </td> }
