<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductsType.typeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.minRaise)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateOfAdd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateOfAuctionStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateOfAuctionEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.approved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sold)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductsType.typeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productName)
            </td>
            <td>
                <img src="~/ProductImage/@item.Picture" style="width:100px; height:100px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.minRaise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateOfAdd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateOfAuctionStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateOfAuctionEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.approved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sold)
            </td>
            <td>
                <i class="fa fa-envelope-o"></i> @Html.ActionLink(layout.edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(layout.details, "Details", new { id = item.Id }) |
                @Html.ActionLink(layout.sell, "Sell", new { id = item.Id }) |
                @Html.ActionLink(layout.delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
