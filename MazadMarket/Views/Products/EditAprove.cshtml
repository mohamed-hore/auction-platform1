@model MazadMarket.Models.Products

@{
    ViewBag.Title = "EditAprove";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






<div>
    <section id="secondary-banner" class="dynamic-image-13">
        <!--for other images just change the class name of this section block like, class="dynamic-image-2" and add css for the changed class-->
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
                    <h2>Contact Us</h2>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6 ">
                    <ul class="breadcrumb">
                        <li><a href="#">Home</a></li>
                        <li>Contact</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <h2>EditAprove</h2>
    <h4>Products</h4>
    <hr />


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)


        <div class="form-group">
            
            <div class="col-md-offset-2 col-md-10">
                @if (!Model.sold)
                {
                    if (Request.Params["Aprove"] == "True")
                    {
                        <input type="submit" value="Aprove" class="btn btn-success" />
                    }
                    else
                    {
                        <input type="submit" value="Reject" class="btn btn-success" />

                    }
                }

            </div>
        </div>



    }
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductsType.typeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductsType.typeName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.productName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.productName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.userId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.userId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Picture)
        </dt>

        <dd>


            <img src="~/ProductImage/@Html.DisplayFor(model => model.Picture)" style="width:150px; height:150px;" />


        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
